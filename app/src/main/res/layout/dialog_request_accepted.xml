<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPopupBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/drawable_padding_bw_views">

        <TextView
            android:id="@+id/tv_header_accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/accept"
            android:textColorHint="@color/yellow"
            android:textColor="@color/colorgrey"
            android:textSize="@dimen/btn_textSize" />

    </LinearLayout>

    <Button
        android:id="@+id/ib_close"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/yellow"
        android:gravity="top"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:drawableRight="@mipmap/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_header"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/outer_margin_bw_views">

        <TextView
            android:id="@+id/tv_other_email"
            android:backgroundTint="@color/yellow"
            android:textColorHint="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/popup_email"
            android:gravity="left|center_vertical"
            android:drawablePadding="10dp"
            android:textColor="@color/colorBackground"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_other_phone_no"
            android:layout_width="match_parent"
            android:backgroundTint="@color/yellow"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@mipmap/popup_phone"
            android:gravity="left|center_vertical"
            android:textColor="@color/colorBackground"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>