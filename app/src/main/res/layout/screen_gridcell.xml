<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="@dimen/calender_grid_width"
    android:layout_height="@dimen/calender_grid_width"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calendar_day_gridcell"
        android:layout_width="@dimen/calender_grid_width_textView"
        android:layout_height="@dimen/calender_grid_width_textView"
        android:layout_gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="1"
        android:gravity="center"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"></TextView>
    <ImageView
        android:id="@+id/imageViewBackground_gridcell"
        android:layout_width="@dimen/calender_grid_width_textView"
        android:layout_height="@dimen/calender_grid_width_textView"
        android:layout_gravity="center"
        android:gravity="center"/>
    <View
        android:id="@+id/ViewCenter"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/calender_grid_width_View_marginTop"
        android:background="@drawable/circle_drawable_green"
        android:gravity="center"/>

</RelativeLayout>