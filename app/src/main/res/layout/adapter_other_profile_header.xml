<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_outer_margin"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/outer_margin_bw_views"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_nd_email"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/tv_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_other_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:drawableLeft="@mipmap/email"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/yellow"
                    android:onClick="onClick"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/tv_textSize" />

                <TextView
                    android:id="@+id/tv_other_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:drawableLeft="@mipmap/phone"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/yellow"
                    android:onClick="onClick"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/tv_textSize" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
        -->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_outer_margin"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/outer_margin_bw_views"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/yellow"
                    android:text="@string/hint_location"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/tv_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_other_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:drawableLeft="@mipmap/location"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/yellow"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/tv_textSize" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_outer_margin"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/outer_margin_bw_views"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/yellow"
                    android:text="@string/other_details"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/tv_textSize"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/yellow"
                        android:text="@string/joined_on"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />

                    <TextView
                        android:id="@+id/tv_other_date_joined_on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/yellow"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/yellow"
                        android:text="@string/other_gender"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />

                    <TextView
                        android:id="@+id/tv_other_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/yellow"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/yellow"
                        android:text="@string/other_age"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />

                    <TextView
                        android:id="@+id/tv_other_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/yellow"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rv_outer_margin"
            android:layout_marginTop="@dimen/rv_outer_margin"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/outer_margin_bw_views"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/yellow"
                    android:text="@string/ad_details_hint"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/tv_textSize"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_ads_applied"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:drawableTint="@color/yellow"
                        android:text="@string/ad_applied"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />

                    <TextView
                        android:id="@+id/tv_ad_applied"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:drawableTint="@color/yellow"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ads_posted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rv_outer_margin"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/yellow"
                        android:text="@string/ad_posted"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />

                    <TextView
                        android:id="@+id/tv_ad_posted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:drawableTint="@color/yellow"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/tv_textSize" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>