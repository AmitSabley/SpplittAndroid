<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header_main"
        layout="@layout/layout_header_main" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ad_deatils"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_main"
        android:layout_above="@+id/btn_connect_ad"
        android:scrollbars="none" />
    <com.igniva.spplitt.ui.views.ButtonRegular
        android:id="@+id/btn_connect_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow"
        android:text="@string/connect"
        android:onClick="onClick"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/btn_textSize" />
</RelativeLayout>